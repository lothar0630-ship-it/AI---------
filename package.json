{
  "name": "personal-portal",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:prod": "npm run lint && npm run test && npm run build",
    "build:analyze": "npm run build && npm run test:bundle",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:performance": "node scripts/performance-test.js",
    "test:bundle": "vitest --run src/test/bundleSize.test.ts",
    "test:perf-monitoring": "vitest --run src/test/performanceMonitoring.test.ts",
    "deploy:build": "node scripts/deploy-build.cjs",
    "deploy:verify": "node scripts/deploy-verify.cjs",
    "deploy:full": "node scripts/deploy-full.cjs",
    "deploy:dry-run": "node scripts/deploy-full.cjs --dry-run",
    "deploy:status": "node scripts/deploy-status.cjs",
    "deploy:test": "node scripts/deployment-test.cjs",
    "aws:setup": "node scripts/aws-setup.cjs",
    "aws:status": "node scripts/deploy-status.cjs",
    "env:setup": "node scripts/env-setup.cjs",
    "env:dev": "node scripts/env-setup.cjs development",
    "env:prod": "node scripts/env-setup.cjs production",
    "env:staging": "node scripts/env-setup.cjs staging",
    "env:validate": "node scripts/env-setup.cjs validate",
    "env:list": "node scripts/env-setup.cjs list"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.0.0",
    "framer-motion": "^10.0.0",
    "lucide-react": "^0.545.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "glob": "^11.0.3",
    "happy-dom": "^20.0.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vitest": "^3.2.4"
  }
}
